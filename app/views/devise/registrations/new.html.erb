<div class="container" id="sign-up-form">
  <div class="row">
    <h2>Join Us to build and collaborate with your Family Circle</h2>


    <div class="col-sm-offset-6 col-sm-6">
      <h3>Sign up...<small>***it's free!!!</small></h3>


<%= bootstrap_form_for(resource,
                       :as => resource_name,
                       :url => registration_path(resource_name)) do |f| %>

  <%= f.text_field :name,
	           placeholder: 'Display Name',
	           class: 'form-control' %>
  <%= f.text_field :email,
	           placeholder: 'email',
	           class: 'form-control' %>
             <%= f.text_field :mobile,
                        placeholder: 'Mobile Number',
                        class: 'form-control' %>
  <%= f.password_field :password,
                       placeholder: 'password',
                       class: 'form-control' %>
  <%= f.password_field :password_confirmation,
                       placeholder: 'password confirmation',
                       class: 'form-control' %>
  <%= f.submit 'Sign up', class: 'btn sign-up-button' %>
<% end %>

<%= render "devise/shared/links" %>
</div>
  </div>
</div>
